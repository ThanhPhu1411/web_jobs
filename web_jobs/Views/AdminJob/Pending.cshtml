@model List<web_jobs.Models.Job>

<h2>Danh sách công việc chờ duyệt</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Nhà tuyển dụng</th>
            <th>Ngày đăng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.JobTitle</td>
                <td>@job.Employer.CompanyName</td>
                <td>@job.PostedDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <form asp-action="Approve" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@job.ID" />
                        <button type="submit" class="btn btn-success btn-sm">Duyệt</button>
                    </form>
                    <form asp-action="Reject" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@job.ID" />
                        <button type="submit" class="btn btn-danger btn-sm">Từ chối</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

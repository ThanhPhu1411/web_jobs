@model web_jobs.Models.Job

@{
    ViewData["Title"] = "Ứng tuyển công việc";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@Model.JobTitle</h4>
    <p><strong>Nhà tuyển dụng:</strong> @Model.Employer.CompanyName</p>
    <p><strong>Danh mục:</strong> @Model.Category.Name</p>
    <p><strong>Mô tả:</strong></p>
    <p>@Model.JobDescription</p>
    <p><strong>Địa điểm:</strong> @Model.Locate</p>
</div>

<form asp-action="ApplyJob" method="post">
    <input type="hidden" asp-for="ID" name="jobId" />
    <button type="submit" class="btn btn-primary">Xác nhận ứng tuyển</button>
    <a asp-action="AllJobs" class="btn btn-secondary">Hủy</a>
</form>
